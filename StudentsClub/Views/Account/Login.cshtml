@model LoginViewModel
@{
    ViewData["Title"] = "Вход";
}
<h2>Вход</h2>
<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email">Имейл</label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Парола</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
     <div class="form-group form-check">
        <input asp-for="RememberMe" value="true"class="form-check-input" type="checkbox"/>
         <span asp-validation-for="RememberMe" class="form-check-label">Запомни ме</span> 
     </div>  
    <button type="submit" class="btn btn-primary">Вход</button>
</form>
